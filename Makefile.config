#icc, g++
BLITZ_CC ?= g++

#lib only
BLITZ_LIB_ONLY ?= 1

#alignment
BLITZ_ALIGNMENT_SIZE ?= 64

#release, performance, develop
BLITZ_MODE ?= release

#avx mode 1|2|3|512
BLITZ_AVX ?= 1

#mkl, atlas, openblas
BLAS ?= openblas

#link
STATIC_LINK ?= 0

#GPU
BLITZ_USE_GPU ?= 0

#MIC
BLITZ_USE_MIC ?= 0

#cuda architecture
CUDA_ARCH ?= -arch sm_35

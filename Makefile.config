#icc, g++
BLITZ_CC ?= icc

#threads
BLITZ_NUM_THREADS ?= 16

#alignment
BLITZ_ALIGNMENT_SIZE ?= 64

#release, performance, develop
BLITZ_MODE ?= release

#avx mode 1|2|3|512
BLITZ_AVX ?= 2

#mkl, atlas
BLAS ?= mkl

#link
STATIC_LINK ?= 0

#GPU
BLITZ_USE_GPU ?= 0

#MIC
BLITZ_USE_MIC ?= 1

#cuda architecture
CUDA_ARCH ?= -arch sm_35
